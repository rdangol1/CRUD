<h2 class= "center"> Course Data for <%= course.name %></h2>
<table class = "table">
    
    <tbody>
        
        <tr>
            <td> Title</td>
            <td>
                <%= course.title %>
            </td>
        </tr>
        <tr>
            <td> Description</td>
            <td>
                <%= course.description %>
            </td>
        </tr>
        
        <tr>
            <td>Num of courses</td>
            <td><%= course.courses.length %> </td>
        </tr>
            
    </tbody>
</table>

<div>
    <a class="button" href="/courses">View all courses</a>
  </div>
  <div>
    <a class="button" href="<%=`/courses/${course._id}/edit`%>">
      Edit Course Details
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
  </div>