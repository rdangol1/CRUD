<h2 class= "center"> User Data for <%= user.name %></h2>
<table class = "table">
    
    <tbody>
        
        <tr>
            <td> Name</td>
            <td>
                <%= user.name %>
            </td>
        </tr>
        <tr>
            <td> Email</td>
            <td>
                <%= user.email %>
            </td>
        </tr>
        <tr>
            <td> Zip Code</td>
            <td>
                <%= user.zipCode %>
            </td>
        </tr>
        <tr>
            <td>Num of courses</td>
            <td><%= user.courses.length %> </td>
        </tr>
            
    </tbody>
</table>


<div>
    <a class="button" href="/users">View all users</a>
  </div>
  <div>
    <a class="button" href="<%=`/users/${user._id}/edit`%>">
      Edit User Details
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
  </div>